<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PointOfSaleSystem.Views.CustomerDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PointOfSaleSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CustomerDetailsWindow">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Thông tin khách hàng" 
                   Style="{StaticResource HeaderTextBlockStyle}"
                   FontWeight="Bold"
                   Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="12340192"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
            <TextBlock Text="-"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
            <TextBlock Text="Nguyễn Nhật Minh"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Số điện thoại:"
                       Margin="5"/>
            <TextBlock Text="0123456789"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Địa chỉ:"
                       Margin="5"/>
            <TextBlock Text="123 Nguyễn Văn Cừ"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ngày sinh:"
                       Margin="5"/>
            <TextBlock Text="14/07/2004"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Giới tính:"
                       Margin="5"/>
            <TextBlock Text="Nam"
                       Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
