<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PointOfSaleSystem.Views.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PointOfSaleSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <AutoSuggestBox PlaceholderText="Nhập tên hoặc mã sản phẩm"
                QueryIcon="Find"
                QuerySubmitted="Search"
                Margin="10"/>
        <Button Content="Thêm" 
                Background="#ffb22c"
                Foreground="Black"
                Click="AddProduct" 
                Margin="10"/>
        <GridView x:Name="productPage"
                  ItemsSource="{x:Bind ProductViewModel.Products}"
                  Padding="10"
                  IsItemClickEnabled="True"
                  ItemClick="OnItemClicked">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical"
                                Padding="10"
                                Margin="10"
                                Background="#f7f7f7"
                                CornerRadius="8">
                        <Grid Width="150"
                              Height="150"
                              Margin="5"
                              BorderBrush="Black">
                            <Rectangle Fill="DarkGray"/>
                            <Image Source="{Binding Image}"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   />
                        </Grid>
                        <Border Width="100"
                                Height="50"
                                VerticalAlignment="Stretch">
                            <TextBlock Text="{Binding Name}"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Foreground="Black"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="3" 
                                   Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </StackPanel>
</Page>
