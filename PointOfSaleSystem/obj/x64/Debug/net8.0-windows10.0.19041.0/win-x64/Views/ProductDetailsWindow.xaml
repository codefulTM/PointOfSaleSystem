<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PointOfSaleSystem.Views.ProductDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:PointOfSaleSystem.Views.Converters"
    xmlns:local="using:PointOfSaleSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Thông tin sản phẩm">

    <Grid x:ConnectionId='2' x:Name="productInfo">
        <Grid.Resources>
            <converter:CurrencyFormatter x:Key="currency"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid Height="250"
                  Width="200"
                  Margin="0 0 20 0" 
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center">
                <Rectangle Fill="DarkGray"/>
                <Image x:ConnectionId='9' x:Name="productImage" 
                       Source="{Binding Image}"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Tên sản phẩm: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='8' x:Name="productName" Text="{Binding Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Thương hiệu: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='7' x:Name="productBrand" Text="{Binding Brand}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Hạng mục: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='6' x:Name="productCategory" Text="{Binding Category}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Tồn kho: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='5' x:Name="productQuantity" Text="{Binding Quantity}"/>                           
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Giá vốn: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='4' x:Name="productCostPrice" Text="{Binding CostPrice, Converter={StaticResource currency}}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <TextBlock Text="Giá bán: "
                               Margin="0 0 10 0"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:ConnectionId='3' x:Name="productSellingPrice" Text="{Binding SellingPrice, Converter={StaticResource currency}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

