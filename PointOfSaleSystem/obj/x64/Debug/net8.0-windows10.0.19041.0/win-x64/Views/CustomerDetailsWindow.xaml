<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PointOfSaleSystem.Views.CustomerDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PointOfSaleSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CustomerDetailsWindow">

    <StackPanel x:ConnectionId='2' x:Name="customerInfo" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Thông tin khách hàng" 
                   Style="{StaticResource HeaderTextBlockStyle}"
                   FontWeight="Bold"
                   Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Id}"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
            <TextBlock Text="-"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
            <TextBlock Text="{Binding Name}"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Số điện thoại:"
                       Margin="5"/>
            <TextBlock Text="{Binding PhoneNumber}"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Địa chỉ:"
                       Margin="5"/>
            <TextBlock Text="{Binding Address}"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ngày sinh:"
                       Margin="5"/>
            <TextBlock Text="{Binding Birthday}"
                       Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Giới tính:"
                       Margin="5"/>
            <TextBlock Text="{Binding Gender}"
                       Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>

